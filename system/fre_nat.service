[Unit]
Description=Enable IP forwarding and NAT for hotspot via wlan0_sta
After=network.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/bin/env bash -c '\
  sysctl -w net.ipv4.ip_forward=1 && \
  iptables -t nat -C POSTROUTING -o wlan0_sta -j MASQUERADE 2>/dev/null || iptables -t nat -A POSTROUTING -o wlan0_sta -j MASQUERADE \
'

[Install]
WantedBy=multi-user.target
